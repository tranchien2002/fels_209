<div class="container" >
  <h2><%= t "views.admin.users.edit" %> <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label t "devise.email" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label t "devise.password" %><br />
      <%= f.password_field :password, autocomplete: "off" %>
      <% if @minimum_password_length %>
        <br />
        <br>
      <% end %>
    </div>

    <div class="field">
      <%= f.label t "devise.password_confirm" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label t "devise.password_current" %> <i>(<%= t "views.admin.users.password_edit" %>)</i><br />
      <%= f.password_field :current_password, autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "Update" %>
    </div>
  <% end %>

  <h3><%= t "views.button.cancel_account" %></h3>
  
  <%= button_to t("views.button.cancel_account"), registration_path(resource_name), data: { confirm: t("views.button.edit_confirm") }, method: :delete %>

  <%= link_to t("views.button.back"), :back %>
</div>
